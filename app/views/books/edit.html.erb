<% if @book.errors.any? %>
  <div class="field_with_errors">
    <%= @book.errors.count %> <h1>件のerrorが発生しました<h1>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book'  %>
  
  <%= link_to 'Show', book_path(@book) %>
  <%= link_to 'Back', books_path %>

<% end %>
